<p id="notice"><%= notice %></p>

<h1>Premios</h1>

<table>
  <thead>
    <tr>
      <th>Nombre</th>
      <th>Descripcion</th>
      <th>Valor</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @premios.each do |premio| %>
      <tr>
        <td><%= premio.nombre %></td>
        <td><%= premio.descripcion %></td>
        <td><%= premio.valor %></td>
        <% if usuario_signed_in? && current_usuario.is_admin? %>
          <td><%= link_to 'Show', premio %></td>
          <td><%= link_to 'Edit', edit_premio_path(premio) %></td>
          <td><%= link_to 'Destroy', premio, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<% if usuario_signed_in? && current_usuario.is_admin? %>
  <%= link_to 'New Premio', new_premio_path %>
<% end %>
