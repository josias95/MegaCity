<p id="notice"><%= notice %></p>

<h1>Almacens</h1>

<table>
  <thead>
    <tr>
      <th>Nombre</th>
      <th>Ubicacion</th>
      <th>Descripcion</th>
      <th>Telefono</th>
      <th>Horario</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @almacens.each do |almacen| %>
      <tr>
        <td><%= almacen.nombre %></td>
        <td><%= almacen.ubicacion %></td>
        <td><%= almacen.descripcion %></td>
        <td><%= almacen.telefono %></td>
        <td><%= almacen.horario %></td>
        <% if usuario_signed_in? && current_usuario.is_admin? %>
          <td><%= link_to 'Show', almacen %></td>
          <td><%= link_to 'Edit', edit_almacen_path(almacen) %></td>
          <td><%= link_to 'Destroy', almacen, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<% if usuario_signed_in? && current_usuario.is_admin? %>
  <%= link_to 'New Almacen', new_almacen_path %>
<% end %>
